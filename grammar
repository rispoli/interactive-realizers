BOOL ::= true | false

ID ::= [a-zA-Z]+[a-zA-Z0-9_]*

NUM ::= [0-9]+

prefix-op ::= - | ~

infix-op ::= + | - | * | / | ^ | && | || | == | != | > | < | >= | <=

exp ::= BOOL
     |  ID
     |  NUM
     |  (exp)
     |  prefix-op exp
     |  exp infix-op exp
     |  if exp then exp else exp
     |  let ID+ = exp
     |  let ID+ = exp in exp
     |  lambda ID* -> exp
     |  @(exp exp*)
     |  {exp*}
